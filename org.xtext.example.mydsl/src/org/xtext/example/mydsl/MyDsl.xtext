grammar org.xtext.example.mydsl.MyDsl with org.eclipse.xtext.common.Terminals

import "http://www.eclipse.org/emf/2002/Ecore" as ecore
generate myDsl "http://www.xtext.org/example/mydsl/MyDsl"

M1_Model: 
	models+=ModelRoot;
	
ModelRoot:
	'Language' 'Name:' name=ID 
	'DSL Type Definition:'
	elements+=(DRObject)+

	'Associations:'
	associationElements+=(Relationship)+;

DRObject:
	'DR Object -- Type:' DRObject_Type;
//	'Name:' text=STRING
//	'ID:'	name=ID;
	
DRObject_Type:
	Statement | 
	Decision_Problem |
	Decision_Result |
	Decision_Option;

Statement:
	'Statement:'
	'ID:'	name=ID
	'Name:' text=STRING;
//	
Decision_Problem:
	'Decision-Problem:'
	'ID:'	name=ID
	'Name:' text=STRING;
//
Decision_Result:
	'Decision-Result:'
	'ID:'	name=ID
	'Name:' text=STRING;
	
Decision_Option:
	'Decision-Option:'
	'ID:'	name=ID
	'Name:' text=STRING;
//OptionSelection:
//	'Optional' 'REF:' | 'Mandatory' 'REF:' Decision_Option->ID
//;

Relationship:
	GenericRelationship | 
	Argumentative_Relationship |
	Derivative_Relationship | 
	Consequence_Relationship |
	Option_Relationship;
	
Argumentative_Relationship:
	"Argumentative Relationship:"
	SourceAttributename source=(Statement)
	SourceCardinalityAttributename source_cardinality=STRING
	TargetAttributename target=DRObject
	TargetCardinalityAttributename target_cardinality=STRING;

Derivative_Relationship:
	"Derivative Relationship:"
	SourceAttributename source=(DRObject)
	SourceCardinalityAttributename source_cardinality=STRING
	TargetAttributename target=(Decision_Problem | Decision_Result)
	TargetCardinalityAttributename target_cardinality=STRING;

Consequence_Relationship:
	"Consequence Relationship:"
	SourceAttributename source=(Decision_Option)
	SourceCardinalityAttributename source_cardinality=STRING
	TargetAttributename target=(Decision_Problem | Decision_Result)
	TargetCardinalityAttributename target_cardinality=STRING;
	
Option_Relationship:
	"Option Relationship:"
	SourceAttributename source=(Decision_Problem)
	SourceCardinalityAttributename source_cardinality=STRING
	TargetAttributename target=(Decision_Option)
	TargetCardinalityAttributename target_cardinality=STRING;
	
//PredefinedRelationship:
