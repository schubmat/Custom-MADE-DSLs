//	sourceRole?=STRING
//	targetRole?=STRING;

GenericRelationship:
	'Generic Relationship:'
	name?=STRING
	SourceAttributename sourceElement=(DRObject)
	TargetAttributename targetElement=(DRObject)	
	SourceCardinalityAttributename sourceCardinality=STRING
	TargetCardinalityAttributename targetCardinality=STRING
	sourceRole?=STRING
	targetRole?=STRING;
	
TargetAttributename: "Target:";
SourceAttributename: "Source:";
TargetCardinalityAttributename: "Target Cardinality:";
SourceCardinalityAttributename: "Source Cardinality:";



	
