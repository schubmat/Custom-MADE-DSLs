<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>org.eclipse.xtext</groupId>
		<artifactId>org.eclipse.xtext.parent</artifactId>
		<version>2.9.0</version>
		<relativePath>../org.eclipse.xtext.parent</relativePath>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<artifactId>org.eclipse.xtext.tycho.parent</artifactId>
	<name>Xtext Eclipse plugins parent</name>
	<packaging>pom</packaging>

	<modules>
		<module>../org.eclipse.xtext.target</module>

		<module>../../plugins/org.eclipse.xtext.xbase.lib</module>
		<module>../../plugins/org.eclipse.xtend.lib</module>
		<module>../../plugins/org.eclipse.xtend.lib.macro</module>

		<module>../../plugins/org.eclipse.xtext.util</module>
		<module>../../plugins/org.eclipse.xtext.smap</module>

		<module>../../plugins/org.eclipse.xtext</module>
		<module>../../plugins/org.eclipse.xtext.ide</module>
		<module>../../plugins/org.eclipse.xtext.java</module>

		<module>../../plugins/org.eclipse.xtext.common.types</module>
		<module>../../plugins/org.eclipse.xtext.ecore</module>
		<module>../../plugins/org.eclipse.xtext.generator</module>
		<module>../../plugins/org.eclipse.xtext.xtext.generator</module>
		<module>../../plugins/org.eclipse.xtext.xtext.wizard</module>
		<module>../../plugins/org.eclipse.xtext.xbase</module>
		<module>../../plugins/org.eclipse.xtext.xbase.ide</module>
		<module>../../plugins/org.eclipse.xtext.junit4</module>

		<!-- new deps from xbase.junit -->
		<module>../../plugins/org.eclipse.xtext.builder</module>
		<module>../../plugins/org.eclipse.xtext.ui</module>
		<module>../../plugins/org.eclipse.xtext.xbase.ui</module>
		<module>../../plugins/org.eclipse.xtext.common.types.ui</module>
		<module>../../plugins/org.eclipse.xtext.ui.codetemplates</module>
		<module>../../plugins/org.eclipse.xtext.ui.codetemplates.ui</module>
		<module>../../plugins/org.eclipse.xtext.ui.shared</module>
		<module>../../plugins/org.eclipse.xtext.common.types.edit</module>

		<module>../../plugins/org.eclipse.xtext.xbase.junit</module>
		<module>../../plugins/org.eclipse.xtend.core</module>
		<module>../../plugins/org.eclipse.xtend.ide.common</module>

		<module>../../plugins/org.eclipse.xtext.builder.standalone</module>
		<module>../../plugins/org.eclipse.xtext.xbase.lib.gwt</module>
		<module>../../plugins/org.eclipse.xtend.lib.gwt</module>
	</modules>

	<profiles>
		<profile>
			<id>include-unpublished</id>
			<modules>
				<module>../../intellij/org.eclipse.xtext.idea.example.entities</module>
				<module>../../intellij/org.eclipse.xtext.idea.example.entities.ide</module>
				<module>../../intellij/org.eclipse.xtext.idea.example.entities.ui</module>
				<module>../../intellij/org.eclipse.xtext.idea.example.entities.tests</module>
				<module>../../intellij/org.eclipse.xtext.idea.sdomain</module>
				<module>../../intellij/org.eclipse.xtext.idea.sdomain.ui</module>
				<module>../../intellij/org.eclipse.xtext.idea.sdomain.tests</module>
				<module>../../tests/org.eclipse.xtext.testlanguages</module>
				<module>../../tests/org.eclipse.xtext.testlanguages.ide</module>
				<module>../../tests/org.eclipse.xtend.core.tests</module>
				<module>../../tests/org.eclipse.xtext.tests</module>
				<module>../../tests/org.eclipse.xtext.common.types.tests</module>
				<module>../../plugins/org.eclipse.xtext.purexbase</module>
				<module>../../tests/org.eclipse.xtext.xbase.tests</module>
				<module>../../tests/org.eclipse.xtext.xbase.testlanguages</module>
				<module>../../tests/org.eclipse.xtext.xbase.testlanguages.ui</module>
				<module>../../web/org.eclipse.xtext.web.example.statemachine</module>
				<module>../../web/org.eclipse.xtext.web.example.statemachine.ide</module>
			</modules>
		</profile>
	</profiles>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>${tycho-version}</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-compiler-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<excludeResources>
						<excludeResource>**/*.xtend</excludeResource>
						<excludeResource>**/*.xtendbin</excludeResource>
						<excludeResource>**/*._trace</excludeResource>
					</excludeResources>
					</configuration>
					<dependencies>
						<dependency>
							<groupId>org.eclipse.tycho</groupId>
							<artifactId>tycho-compiler-jdt</artifactId>
							<version>${tycho-version}</version>
							<exclusions>
								<exclusion>
									<groupId>org.eclipse.tycho</groupId>
									<artifactId>org.eclipse.jdt.compiler.apt</artifactId>
								</exclusion>
							</exclusions>
						</dependency>
					</dependencies>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-versions-plugin</artifactId>
				<version>${tycho-version}</version>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<target>
						<artifact>
							<groupId>org.eclipse.xtext</groupId>
							<artifactId>org.eclipse.xtext.target</artifactId>
							<version>${project.parent.version}</version>
							<!-- Uses artifactId+.target by default -->
						</artifact>
					</target>
					<environments>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-packaging-plugin</artifactId>
				<version>${tycho-version}</version>
				<configuration>
					<format>'v'yyyyMMdd-HHmm</format>
				</configuration>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<!--This plugin's configuration is used to store Eclipse m2e settings only. It has no influence on the Maven build itself.-->
				<plugin>
					<groupId>org.eclipse.m2e</groupId>
					<artifactId>lifecycle-mapping</artifactId>
					<version>1.0.0</version>
					<configuration>
						<lifecycleMappingMetadata>
							<pluginExecutions>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.eclipse.tycho
										</groupId>
										<artifactId>
											tycho-compiler-plugin
										</artifactId>
										<versionRange>
											[0.22.0,)
										</versionRange>
										<goals>
											<goal>compile</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
								<pluginExecution>
									<pluginExecutionFilter>
										<groupId>
											org.eclipse.tycho
										</groupId>
										<artifactId>
											tycho-packaging-plugin
										</artifactId>
										<versionRange>
											[0.22.0,)
										</versionRange>
										<goals>
											<goal>
												validate-version
											</goal>
											<goal>validate-id</goal>
										</goals>
									</pluginExecutionFilter>
									<action>
										<ignore></ignore>
									</action>
								</pluginExecution>
							</pluginExecutions>
						</lifecycleMappingMetadata>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
